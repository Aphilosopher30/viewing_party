

<div id="discover">
  <%= form_with url: discover_path, method: :get do |f| %>
    <%= f.submit "Discover Movies" %>
  <% end %>
</div>

<br>
<br>


<div id="friends ">
  <%= form_with url: friends_path, method: :post do |f| %>
    <%= f.label :friend %>
    <%= f.text_field :friend %>
    <%= f.submit "Add Friend" %>
  <% end %>


  <%  if @users_friends.empty? %>
    <%= "You currently have no friends." %>
  <% else %>
    <% @users_friends.each do |friend| %>
      <br>
      <%= friend.name %>:
      <%= friend.email %>
    <% end %>
  <% end %>
</div>


<div id="hosted_parties">
  <h3>Your Parties</h3>
  <% if @parties.present? %>
    <%= render partial: 'parties', locals: {events: @parties} %>
  <% else %>
    <p>You aren't currently hosting any parties</p>
  <% end %>
</div>

<div id="invited_parties">
  <h3>Party Invitations</h3>
  <% if @invites.present? %>
    <%= render partial: 'parties', locals: {events: @invites} %>
  <% else %>
    <p>You aren't currently invited to any parties</p>
  <% end %>
</div>
