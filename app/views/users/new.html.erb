<h1> Register </h1>

<%= form_with model: @user do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :password %>
  <%= f.password_field :password %>
  
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Register" %>
<% end %>

<%= link_to 'Already have an account? Login here!', login_path %>
